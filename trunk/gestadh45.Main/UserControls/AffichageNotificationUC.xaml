<UserControl x:Class="gestadh45.Main.UserControls.AffichageNotificationUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d" 
			 x:Name="AffichageNotification"
			 d:DesignHeight="50" d:DesignWidth="300">
	<StackPanel>
		<TextBox Height="50" 
				 Text="{Binding ElementName=AffichageNotification, Path=Notification.Texte}"
				 Foreground="{Binding ElementName=AffichageNotification, Path=Notification.Couleur}" 
				 VerticalScrollBarVisibility="Auto"/>
	</StackPanel>
</UserControl>
