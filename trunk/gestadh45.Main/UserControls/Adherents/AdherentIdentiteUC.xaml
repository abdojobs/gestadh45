<UserControl x:Class="gestadh45.Main.UserControls.Adherents.AdherentIdentiteUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 x:Name="AdherentIdentite"
			 mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="200">
	<GroupBox Header="Identité" Margin="0,0,0,10" Background="#FFFFDEAD" BorderBrush="#FF000000">
		<StackPanel Orientation="Vertical">
			<TextBlock FontWeight="Bold" FontSize="14">
				<TextBlock.Text>
					<MultiBinding StringFormat="{}{0} {1}">
						<Binding ElementName="AdherentIdentite" Path="Adherent.Nom" />
						<Binding ElementName="AdherentIdentite" Path="Adherent.Prenom" />
					</MultiBinding>
				</TextBlock.Text>
			</TextBlock>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Né le : " />
				<TextBlock Text="{Binding ElementName=AdherentIdentite, Path=Adherent.DateNaissance, StringFormat='{}{0:dd/MM/yyyy}'}" />
				<TextBlock Text="{Binding ElementName=AdherentIdentite, Path=Adherent.Age, StringFormat=' ({0} ans)'}" />
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Sexe : " />
				<TextBlock Text="{Binding Path=Adherent.Sexe}" />
			</StackPanel>			
		</StackPanel>
	</GroupBox>
</UserControl>
