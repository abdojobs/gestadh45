<UserControl x:Class="gestadh45.Main.UserControls.Adherents.AdherentDiversUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 x:Name="AdherentDivers"
			 mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="200">
	<GroupBox Header="Divers" Margin="0,0,0,10" Background="#FFFFDEAD" BorderBrush="#FF000000">
		<StackPanel Orientation="Vertical">
			<TextBlock TextWrapping="Wrap" Text="{Binding ElementName=AdherentDivers, Path=Adherent.Commentaire}" />
			<TextBlock Text="" />
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Créé le " />
				<TextBlock Text="{Binding ElementName=AdherentDivers, Path=Adherent.DateCreation, StringFormat='dd/MM/yyyy à  HH:MM:ss'}" />
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Modifié le " />
				<TextBlock Text="{Binding ElementName=AdherentDivers, Path=Adherent.DateModification, StringFormat='dd/MM/yyyy à  HH:MM:ss'}" />
			</StackPanel>
		</StackPanel>
	</GroupBox>
</UserControl>
