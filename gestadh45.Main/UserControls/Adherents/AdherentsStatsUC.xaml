<UserControl x:Class="gestadh45.Main.UserControls.Adherents.AdherentsStatsUC"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 x:Name="AdherentsStats"
			 mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="200">
	<GroupBox Header="Stats" Margin="0,0,0,10" Background="#FFFFDEAD" BorderBrush="#FF000000">
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Nb. fiches : " />
				<TextBlock Text="{Binding ElementName=AdherentsStats, Path=NbAdherents}" />
			</StackPanel>
		</StackPanel>
	</GroupBox>
</UserControl>
