<Window x:Class="gestadh45.wpf.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:uc="clr-namespace:gestadh45.wpf.UserControls"
		Title="GestAdh45" MinHeight="500" MinWidth="705"
		DataContext="{Binding Path=MainVM, Source={StaticResource ResourceKey=Locator}}" 
		Icon="/gestadh45.wpf;component/gestadh45.ico" 
		WindowState="Maximized">
	<DockPanel>
		<uc:MenuPrincipalUC DockPanel.Dock="Top"
							  CmdShowUC="{Binding Path=ShowUCCommand}"
							  CmdAboutBox="{Binding Path=AboutBoxCommand}"
							  CmdClose="{Binding Path=CloseCommand}"
							  />

		<Border DockPanel.Dock="Bottom" BorderThickness="0.5" BorderBrush="#FF000000">
			<StatusBar MaxHeight="25">
				<StatusBar.Items>
					<StatusBarItem HorizontalAlignment="Left">
						<TextBlock Text="{Binding InfosDataSource}" />
					</StatusBarItem>
					<StatusBarItem HorizontalAlignment="Right">
						<TextBlock Text="{Binding InfosSaisonCourante}" />
					</StatusBarItem>
				</StatusBar.Items>
			</StatusBar>
		</Border>

		<Border Margin="5,5,5,5" DockPanel.Dock="Bottom" BorderThickness="0.5" BorderBrush="#FF000000">
			<TextBox Height="50" 
				Text="{Binding Path=UserNotification}" 
				VerticalScrollBarVisibility="Auto"/>
		</Border>

		<Border Name="contenu"
			Margin="5,5,5,5" 
			BorderThickness="1" 
			BorderBrush="Black" 
			Background="Cornsilk" />
	</DockPanel>
</Window>
